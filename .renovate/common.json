{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ignorePaths": [
    "docs/**",
    "infra/**",
    "**/*.sops.*"
  ],
  "helmv3": {
    "fileMatch": ["gitops/manifests/.+\\.ya?ml$", "gitops/bootstrap/.+\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": ["gitops/manifests/.+\\.ya?ml$", "gitops/bootstrap/.+\\.ya?ml$"]
  },
  "kubernetes": {
    "fileMatch": ["\\.taskfiles/.+\\.ya?ml$", "gitops/manifests/.+\\.ya?ml$"]
  },
  "custom.regex": {
    "fileMatch": ["gitops/.+\\.ya?ml$"]
  }
}
